<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>Test KML</name>

    <!-- Point Example -->
    <Placemark>
      <name>Test Point</name>
      <description>A single test point</description>
      <Point>
        <coordinates>78.9629,20.5937,0</coordinates>  <!-- Longitude, Latitude, Altitude -->
      </Point>
    </Placemark>

    <!-- LineString Example -->
    <Placemark>
      <name>Test Line</name>
      <description>A test line from point A to B</description>
      <LineString>
        <coordinates>
          78.9629,20.5937,0
          79.1029,21.0000,0
          79.2500,21.5000,0
        </coordinates>
      </LineString>
    </Placemark>

    <!-- Polygon Example -->
    <Placemark>
      <name>Test Polygon</name>
      <description>A test polygon area</description>
      <Polygon>
        <outerBoundaryIs>
          <LinearRing>
            <coordinates>
              78.9629,20.5937,0
              79.1029,21.0000,0
              79.2500,21.5000,0
              78.8000,21.2000,0
              78.9629,20.5937,0
            </coordinates>
          </LinearRing>
        </outerBoundaryIs>
      </Polygon>
    </Placemark>

  </Document>
</kml>
